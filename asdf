ACTIONS=("quit",
		 "save",
		 "load",
		 "get",
		 "use",
		 "move")

class Player:
     def __init__(self, name):
        self.inventory = []
        self.name = name
    
     def take(self, item_name):
        for item in current_room.items:
            if item.name == item_name:
                current_room.items.remove(item)
                self.inventory.append(item)
                print(f"You take the {item_name}")
                return
        print("That item is not in the room")

class Item:
    def __init__(self, name, description):
        self.name = name
        self.description = description

class Room:
    def __init__(self, name, description):
        self.name = name
        self.description = description
    
    def add_item(self, item):
        self.items.append(item)
        
key1 = Item("key", "An ordinary key lies on a table.")
key2 = Item("key", "A wooden key lies on the floor.")
sword = Item("Sword", "A sharp sword covered with jewels.")
note = Item("Note", "If you want to continue you must prove your wits solve this riddle to find the location of the princess.\nI am dark and damp, deep beneath the ground,\nMany a prisoner here can be found.\nWith walls of stone and bars of steel,\nMy confines can make the bravest man kneel.")
potionD = ("Potion of Invisibility", "Use me to move unsean. But be careful you only get one shot.")
princess = ("Princess", "A beautiful young lady.")
start_room = Room("The Great Hall", "It is a grand room with high ceilings, long tables, and a large fireplace. This is where feasts are held and guests are entertained.")
throne_room = Room("TheThrone Rooom", "It is a lavishly decorated room with a high-backed throne at one end. This is where the king or queen holds court and receives important guests.")
armory = Room("The Armory", "It is a room filled with weapons and armor, from swords and shields to chainmail and plate armor. There is one particular sword that stands out.")
chapel = Room("The Chapel", "It is a peaceful room with stained-glass windows and religious artifacts. This is where the castle's inhabitants come to pray and attend religious services.")
kitchen = Room("The Kitcen", "It is an abbondoned kitchen that still smells like freshly baked bread.")
bedchamber = Room("The Bedchamber", "It is a cozy room with a large bed and a fireplace.")
servants_quarters = Room("The Servants' Quarters", "It is a cramped room filled with cots and bunk beds. Nobody seems to be here anymore.")
library = ("The Library", "It is a quiet room filled with shelves of books and manuscripts.")
dungeon = ("The Dungeon", "It is a dark, dank room deep beneath the castle, filled with torture devices.")

current_room = start_room

while ACTIONS != "quit":
    print("Hello and welcome to Medieval Castle Adventure")
    name = input("What is your name?\n")
    print(f"Greetings brave {name}, you are a knight on an epic quest.\nYou goal is to navigate the castle of an evil sorcerer in search for a lost princess.")
    player = Player(name)
    print(f"You are in {current_room.name}.")
    print(current_room.description)
    print(f"\nActions:\n{ACTIONS}\n")
    
